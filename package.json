{
  "name": "niilearn",
  "version": "1.0.2",
  "description": "Machine Learning REST API",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production nodemon ./index.js",
    "test": "xo && cross-env NODE_ENV=test nyc ava --verbose --fail-fast",
    "docker:start": "su -m nodeuser -c 'cross-env NODE_ENV=production pm2-docker start ./index.js'"
  },
  "engines": {
    "node": ">=8",
    "yarn": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niiknow/niilearn.git"
  },
  "keywords": [
    "machine",
    "learning"
  ],
  "author": "friends@niiknow.org",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/niiknow/niilearn/issues"
  },
  "homepage": "https://github.com/niiknow/niilearn#readme",
  "devDependencies": {
    "ava": "^0.22.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.1.0",
    "sinon": "^3.2.1",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "bayes": "0.0.7",
    "body-parser": "^1.17.2",
    "cache-manager": "^2.4.0",
    "cors": "^2.8.4",
    "cross-env": "^5.0.5",
    "csvtojson": "^1.1.7",
    "express": "^4.15.4",
    "multer": "^1.3.0",
    "pm2": "^2.6.1"
  },
  "xo": {
    "semicolon": true,
    "prefer-const": false,
    "space": 2,
    "rules": {
      "object-shorthand": [
        0,
        "consistent"
      ],
      "capitalized-comments": [
        "error",
        "never"
      ],
      "ava/prefer-async-await": 0
    }
  },
  "ava": {
    "failWithoutAssertions": true
  }
}
